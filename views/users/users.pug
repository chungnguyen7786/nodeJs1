extends ../layouts/common.pug
block content
  h1 Users 

  a.btn.btn-primary(href="/users/create") Create new user

  br
  br

  form(action="/users/search" method="GET") 
    input(type="text" name="q" value=q)
    button Search

  ul 
    each user in users
      li 
        span= user.name 
        span &nbsp;&nbsp;&nbsp;
        a(href="/users/"+ user.id) View
    
