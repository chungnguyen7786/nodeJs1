extends ../layouts/common.pug
block content
  h1 Create a new user 

  if errors 
    each error in errors 
      .alert.alert-danger= error
  form(action="/users/create" method="POST")
    .form-group
      label(for="name") Name:       
      input#name.form-control(name="name" type="text" value=value ? value.name : "")
      br
      label(for="email") Email:       
      input#email.form-control(name="email" type="text" value=value ? value.email : "")
      br
      label(for="phone") Phone:       
      input#phone.form-control(name="phone" type="text" value=value ? value.phone : "")
      br
      button.btn.btn-primary Create
    